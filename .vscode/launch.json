    {
        "version": "0.2.0",
        "configurations": [
            {
                "type": "lldb",
                "request": "launch",
                "name": "Debug executable 'tod'",
                "cargo": {
                    "args": [
                        "build",
                        "--bin=tod",
                        "--package=tod",
                    ],
                    "filter": {
                        "name": "tod",
                        "kind": "bin"
                    }
                },
                "args": [
                    "list",
                    "view"
                ],
                "cwd": "${workspaceFolder}"
            },
            {
                "type": "lldb",
                "request": "launch",
                "name": "Debug unit tests in executable 'tod'",
                "cargo": {
                    "args": [
                        "test",
                        "--no-run",
                        "--bin=tod",
                        "--package=tod"
                    ],
                    "filter": {
                        "name": "tod",
                        "kind": "bin"
                    }
                },
                "args": [],
                "cwd": "${workspaceFolder}"
            }
        ]
    }